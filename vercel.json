{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "src/api/sync-gold-rates.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/sync-gold-rates", "dest": "/src/api/sync-gold-rates.js" },
    { "src": "/(.*)", "dest": "/build/$1" }
  ]
}
