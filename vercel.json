{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/rates/save",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/rates/sync",
      "schedule": "*/30 * * * *"
    }
  ]
}
